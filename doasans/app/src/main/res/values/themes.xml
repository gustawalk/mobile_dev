<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TesteDoasans" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/neon_green</item>
        <item name="colorPrimaryVariant">@color/neon_green</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>

    <style name="ScreenBackground">
        <item name="android:background">@color/cor_fundo_light</item>
    </style>

    <style name="CardBackground">
        <item name="android:background">@color/white</item>
    </style>

    <style name="TextColor">
        <item name="android:textColor">@color/neon_green</item>
    </style>

    <style name="Theme.TesteDoasans.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TesteDoasans.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TesteDoasans.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>